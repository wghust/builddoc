<% include header_2 %>
<link rel="stylesheet" type="text/css" href="/stylesheets/case.css">
<div class="container">
	<div class="left">
		<div class="block">
			<div class="block_top">
				<span class="icon-file-text">&nbsp;<a href="/case/<%=onecase._id%>/one">案例：<%=onecase.casename%></a></span>
				<a href="/case/<%=onecase._id%>/add" class="cbtn addbug">添加BUG</a>
			</div>
			<div class="block_con">
				<table class="bugtable">
					<thead>
						<tr>
							<td>内容</td>
							<td>等级</td>
							<td>时间</td>
							<td>创建者</td>
							<td>操作</td>
						</tr>
					</thead>
					<tbody>
						<% bugs.forEach(function(onebug,index){ %>
							<tr data-bugid="<%=onebug._id%>" data-userid="<%=onebug.author.userid%>" data-useremail="<%=onebug.author.email%>">
								<td width="280px"><%=onebug.content%></td>
								<td><%=onebug.grade%></td>
								<td><%=onebug.date%></td>
								<td><%=onebug.author.name%></td>
								<td>
									<a href="" class="cbtn emailone">邮件某人</a>
									<a href="/case/<%=onecase._id%>/<%=onebug._id%>/one" class="cbtn">查看详情</a>
								</td>
							</tr>
						<%	}) %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="right">
		<div class="tblock userlist">
			<div class="tblock_top" data-founderuid="<%=onecase.founder.uid%>" data-founderusername="<%=onecase.founder.username%>" data-founderemail="<%=onecase.founder.email%>">
				<span class="icon-file-text">&nbsp;团员成员(创建者：<%=onecase.founder.name%>)</span>
			</div>
			<% if(onecase.member.length!=0) {%>
			<div class="tblock_con">
				<ul>
					<% onecase.member.forEach(function(om,index){ %>
						<li data-uid="<%om.userid%>" data-email="<%=om.email%>">
							<span class="icon-user">&nbsp;<%=om.name%></span>
							<span class="icon-bin om_delete"></span>
							<div class="clear"></div>
						</li>
					<% }); %>
				</ul>
			</div>
			<% } %>
			<br>
			<a href="/case/<%=onecase._id%>/p/add" class="cbtn">添加成员</a>
		</div>
	</div>
</div>
<% include footer %>